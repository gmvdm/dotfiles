# -*- sh -*-

export FIGNORE=".o:.aux:.out"
export PAGER='less -FXRS'
export EDITOR=emacs
export PATH="$HOME/bin:$HOME/.bin:/usr/local/homebrew/bin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/local/git/bin:$PATH"
export MANPATH="/usr/local/man:/usr/local/mysql/man:/usr/local/git/man:$MANPATH"
export LSCOLORS='Exfxcxdxbxegedabagacad'

export LESS_TERMCAP_mb=$'\E[01;34m'
export LESS_TERMCAP_md=$'\E[01;34m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

fpath=(~/.zsh/functions $fpath)
autoload -U ~/.zsh/functions/*(:t)

HISTFILE=~/.zsh_history
HISTSIZE=1000
SAVEHIST=1000
REPORTTIME=10 # print elapsed time when more than 10 seconds

setopt auto_cd # automatically tab complete into cdpath dirs
cdpath=($HOME/code)

setopt NO_BG_NICE # don't nice background tasks
setopt NO_HUP
setopt NO_LIST_BEEP
setopt LOCAL_OPTIONS # allow functions to have local options
setopt LOCAL_TRAPS # allow functions to have local traps
setopt PROMPT_SUBST
setopt COMPLETE_IN_WORD
setopt APPEND_HISTORY # adds history

bindkey "\eOA" up-line-or-history
bindkey "\eOB" down-line-or-history

zle -N newtab

# Setup rbenv
if which rbenv > /dev/null; then eval "$(rbenv init -)"; fi

# Setup ssh-agent
if [ ! -f $HOME/.ssh/agent ]
then
	ssh-agent > $HOME/.ssh/agent
fi

source $HOME/.ssh/agent >& /dev/null

if [ ! -S $SSH_AUTH_SOCK ]
then
	ssh-agent > $HOME/.ssh/agent
	source $HOME/.ssh/agent >& /dev/null
fi

if [[ -n $EMACS ]]; then
  export PROMPT='%~ %# '
  export RPROMPT=''
  unsetopt zle
else
  export RPROMPT='%B%~%b'
  export PROMPT='%n@%m $(git_info_for_prompt)%# '
fi
